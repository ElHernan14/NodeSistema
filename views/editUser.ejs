<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %>

 <!-- Content Wrapper. Contains page content -->
 <div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <%- include("template/breadcrumb", {module: 'Edit User'}) %>
   <section class="content-header">
     <div class="container-fluid">
      <div class="row justify-content-center">
         <div class="col-sm-8">
          <%if (user){%>
            <h1>Edit User</h1>
            <br>
            <div class="row">
              <div class="col-md-6">
                <form action="/updateUser" method="post">
                  <input hidden id="id" name="id" value="<%= user.idUsuario %>">
                  <div class="mb-3">
                    <label for="nombre" class="form-label">Name</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1" value="<%= user.nombre %>" autofocus>
                  </div>
                  <div class="mb-3">
                    <label for="apellido" class="form-label">Surname</label>
                    <input type="text" class="form-control" id="apellido" name="apellido" tabindex="2" value="<%= user.apellido %>">
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" tabindex="3" value="<%= user.mail %>">
                  </div>
                  <br>
                  <div class="mb-3">
                    <select id="area" name="area" class="form-select" tabindex="4">
                        <option <%= user.areaDeTrabajo == 'Administracion' ? "selected" : "" %> value="Administracion">Administraci√≥n</option>
                        <option <%= user.areaDeTrabajo == 'Gerencia' ? "selected" : "" %> value="Gerencia">Gerencia</option>
                        <option <%= user.areaDeTrabajo == 'Contaduria' ? "selected" : "" %> value="Contaduria">Contaduria</option>
                    </select>
                  </div>
                  <br>
                  <button type="submit" class="btn btn-primary" tabindex="5">Update</button>
                  <a href="/users" class="btn btn-secondary">Cancel</a>
                </form>
              </div>
              <div class="col-md-6">
                <div class="row">
                  <div class="col-sm-9">
                    <div class="form-group">
                      <% if(user.imagen) {%>
                        <img src="../uploads/<%= user.imagen %>" alt="<%= user.imagen %>" width="70px" height="70px">
                      <% }%>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <form action="/upload/<%= user.idUsuario %>" method="POST" enctype="multipart/form-data">
                      <input type="file" name="image" class="btn btn-secondary" required> 
                      <button type="submit" class="btn btn-primary">
                        Upload
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <%}%>
         </div>
       </div>
     </div><!-- /.container-fluid -->
   </section>
   <!-- /.content -->
 </div>
 <!-- /.content-wrapper -->

 <%- include("template/footer") %>